.merge-cell {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  /* background-color: red; */
  background-color: #ffffff;
  display: flex;
  align-items: center;
  z-index: 9;
  /* white-space:pre-line; */
}
.merge-cell::before {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1rpx;
  background-color: #E2E2E2;
  z-index: 1;
}